#:import MeshLinePlot kivy_garden.graph.MeshLinePlot

<mainScreen>:
    name: 'main'

    FloatLayout:
        canvas:
            # background-----------------------------------
            Color:
                #rgb: 178/255, 182/255, 176/255 # weird tan color
                #rgb: 53/255, 69/255, 81/255 # dark blue
                rgb: 100/255, 140/255, 172/255
            Rectangle:
                pos: 0, 0
                size: self.width, self.height

            # background for serial indicators-------------
            Color:
                rgb: 53/255, 69/255, 81/255
            Rectangle:
                pos: 0, 0
                size: self.width, 0.055*self.height

            # indicators-----------------------------------
            # serial connection indicator
            Color:
                rgba: root.serialIndicatorC
            Rectangle:
                pos: 0.1*self.width, 0.01*self.height
                size: 0.03*self.width , 0.03*self.height

            # recording indicator
            Color:
                rgba: root.recordIndicatorC
            Rectangle:
                pos: 0.246*self.width, 0.01*self.height
                size: 0.03*self.width , 0.03*self.height

            # backgrounds for mode control-----------------
            # select the mode
            Color: 
                rgb: 53/255, 69/255, 81/255
            Rectangle:
                pos: 0.006*self.width, 0.335*self.height
                size: 0.585*self.width, 0.12*self.height

            # trial mode background
            Color:
                rgb: 53/255, 69/255, 81/255
            Rectangle:
                pos: 0.006*self.width, 0.065*self.height
                size: 0.29*self.width, 0.26*self.height

            #debug mode background
            Color:
                rgb: 53/255, 69/255, 81/255
            Rectangle:
                pos: 0.305*self.width, 0.065*self.height
                size: 0.286*self.width, 0.26*self.height

            # Legs image---------------------------------------
            Color:
                rgb: 1,1,1
            Rectangle:
                source: 'legs.jpg'
                pos: 0.1*self.width, 0.48*self.height
                size: self.width*0.4, self.height*0.5
            # Left Toe
            Color:
                rgba: root.leftToeC
            Ellipse:
                pos: 0.15*self.width, 0.49*self.height
                size: 25, 15
            # Left Heel
            Color:
                rgba: root.leftHeelC
            Ellipse:
                pos: 0.22*self.width, 0.54*self.height
                size: 25, 15
            # Left Plantar
            Color:
                rgba: root.leftPlantarC
            Rectangle:
                pos: 0.17*self.width, 0.75*self.height
                size: 25, 15
            # Left Dorsi
            Color:
                rgba: root.leftDorsiC
            Rectangle:
                pos: 0.24*self.width, 0.78*self.height
                size: 25, 15

            # Right Toe
            Color:
                rgba: root.rightToeC
            Ellipse:
                pos: 0.42*self.width, 0.49*self.height
                size: 25, 15
            # Right Heel
            Color:
                rgba: root.rightHeelC
            Ellipse:
                pos: 0.35*self.width, 0.54*self.height
                size: 25, 15
            # Right Plantar
            Color:
                rgba: root.rightPlantarC
            Rectangle:
                pos: 0.4*self.width, 0.75*self.height
                size: 25, 15
            # Right Dorsi
            Color:
                rgba: root.rightDorsiC
            Rectangle:
                pos: 0.33*self.width, 0.78*self.height
                size: 25, 15
            

        # serial buttons-----------------------------------
        Label:
            pos_hint: {'x': 0.0, 'top': 0.1}
            size_hint: 0.1, 0.15
            text: 'Connected'
        Label:
            pos_hint: {'x': 0.15, 'top': 0.1}
            size_hint: 0.1, 0.15
            text: 'Recording'
        Button:
            pos_hint: {'x': 0.33, 'top': 0.05}
            size_hint: 0.18, 0.05
            text: 'Refresh COM Ports'
            on_press:
                root.FindAllSerialPorts()
        Spinner:
            pos_hint: {'x': 0.55, 'top': 0.05}
            size_hint: 0.12, 0.05
            text: 'Select Port'
            text_autoupdate: True
            values: root.result
            on_text:
                root.setPort(self.text)
        Button:
            pos_hint: {'x': 0.7, 'top': 0.05}
            size_hint: 0.1, 0.05
            text: 'Connect'
            on_press:
                root.connectToSerial()
        Button:
            pos_hint: {'x': 0.85, 'top': 0.05}
            size_hint: 0.12, 0.05
            text: 'Disconnect'
            on_press:
                root.sendSerial('0')
                root.disconnectFromSerial()

        # graphs for plotting------------------------------
        Graph:
            pos_hint: {'x': 0.6, 'top': 1}
            size_hint: 0.4, 0.315
            border_color: (0,0,0,1)
            background_color: (178/255, 182/255, 176/255, 1)
            label_options: {'color': (0,0,0,1)}
            ymin: -1
            ymax: 1
            x_grid: True
            y_grid: True
            x_grid_label: True
            y_grid_label: True
            x_ticks_major: 20
            y_ticks_major: 0.5
            id: gyroPlot
            xlabel: ''
            ylabel: 'Gyroscope'
        Graph:
            pos_hint: {'x': 0.6, 'top': 0.685}
            size_hint: 0.4, 0.315
            border_color: (0,0,0,1)
            background_color: (178/255, 182/255, 176/255, 1)
            label_options: {'color': (0,0,0,1)}
            ymin: -1
            ymax: 1
            x_grid: True
            y_grid: True
            x_grid_label: True
            y_grid_label: True
            x_ticks_major: 20
            y_ticks_major: 0.5
            id: accelPlot
            xlabel: ''
            ylabel: 'Accelerometer'
        Graph:
            pos_hint: {'x': 0.6, 'top': 0.37}
            size_hint: 0.4, 0.315
            border_color: (0,0,0,1)
            background_color: (178/255, 182/255, 176/255, 1)
            label_options: {'color': (0,0,0,1)}
            ymin: 0
            ymax: 1.
            x_grid: True
            y_grid: True
            x_grid_label: True
            y_grid_label: True
            x_ticks_major: 20
            y_ticks_major: 0.2
            id: phasePlot
            xlabel: ''
            ylabel: 'Phase Variable'

        # mode selection-----------------------------------
        Label:
            pos_hint: {'x': 0.23, 'top': 0.53}
            size_hint: 0.15, 0.2
            text: 'Select the Mode'
        Button: 
            pos_hint: {'x': 0.05, 'top': 0.4}
            size_hint: 0.15, 0.05
            text: 'Standby'
            on_press:
                root.CONTROLMODE = 0
                root.AFFECTEDLIMB = 0
                root.sendSerial('1')
        Button:
            pos_hint: {'x': 0.22, 'top': 0.4}
            size_hint: 0.15, 0.05
            text: 'Trial Mode'
            on_press:
                root.CONTROLMODE = 0
                root.AFFECTEDLIMB = 0
                root.sendSerial('2')
        Button:
            pos_hint: {'x': 0.42, 'top': 0.4}
            size_hint: 0.15, 0.05
            text: 'Debug Mode'
            on_press:
                root.CONTROLMODE = 0
                root.AFFECTEDLIMB = 0
                root.sendSerial('3')

        # trial mode control-------------------------------
        Label:
            pos_hint: {'x': 0.09, 'top': 0.39}
            size_hint: 0.15, 0.2
            text: 'Trial Mode Control'
        Button:
            pos_hint: {'x': 0.02, 'top': 0.26}
            size_hint: 0.13, 0.05
            text: 'Left Leg'
            on_press:
                root.AFFECTEDLIMB = 1
                root.sendSerial('2a1')
        Button:
            pos_hint: {'x': 0.02, 'top': 0.2}
            size_hint: 0.13, 0.05
            text: 'FSR Mode'
            on_press:
                root.CONTROLMODE = 1
                root.sendSerial('2c1')
        Button:
            pos_hint: {'x': 0.02, 'top': 0.14}
            size_hint: 0.13, 0.05
            text: 'Start Trial'
            on_press:
                if root.AFFECTEDLIMB > 0 and root.CONTROLMODE > 0:root.sendSerial('2s')
        Button:
            pos_hint: {'x': 0.16, 'top': 0.26}
            size_hint: 0.13, 0.05
            text: 'Right Leg'
            on_press:
                root.AFFECTEDLIMB = 2
                root.sendSerial('2a2')
        Button:
            pos_hint: {'x': 0.16, 'top': 0.2}
            size_hint: 0.13, 0.05
            text: 'Phase Mode'
            on_press:
                root.CONTROLMODE = 2
                root.sendSerial('2c2')
        Button:
            pos_hint: {'x': 0.16, 'top': 0.14}
            size_hint: 0.13, 0.05
            text: 'End Trial'
            on_press:
                root.sendSerial('2e')
        
        # debug mode control-------------------------------
        Label:
            pos_hint: {'x': 0.39, 'top': 0.39}
            size_hint: 0.15, 0.2
            text: 'Debug Mode Control'
        Button:
            pos_hint: {'x': 0.32, 'top': 0.26}
            size_hint: 0.13, 0.05
            text: 'Dorsal ON'
            on_press:
                root.sendSerial('311')
        Button: 
            pos_hint: {'x': 0.32, 'top': 0.2}
            size_hint: 0.13, 0.05
            text: 'Plantar ON'
            on_press:
                root.sendSerial('321')
        Button:
            pos_hint: {'x': 0.46, 'top': 0.26}
            size_hint: 0.13, 0.05
            text: 'Dorsal OFF'
            on_press:
                root.sendSerial('310')
        Button:
            pos_hint: {'x': 0.46, 'top': 0.2}
            size_hint: 0.13, 0.05
            text: 'Plantar OFF'
            on_press:
                root.sendSerial('320')
        